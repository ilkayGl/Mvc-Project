@using EntityLayer.Concrete
@model List<Heading>

@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Mvc Proje Kampı |</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="~/AdminLTE-3.0.4/https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <link href="~/Content/toastr.css" rel="stylesheet" />
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/AdminLTE-3.0.4/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Başlıklar</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!--<div class="user-panel mt-3 pb-3 mb-3 d-flex">-->
                @*<div class="image">
                        <img src="" class="img-circle elevation-2" alt="User Image">
                    </div>*@
                <!--<div class="info">
                        <a href="#" class="d-block">İlkay Gül</a>
                    </div>
                </div>-->
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    @foreach (var item in Model)
                    {
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="/Default/DefaultHeadings/@item.HeadingID" class="nav-link">
                                    <p>
                                        @item.HeadingName
                                    </p>
                                </a>
                            </li>
                        </ul>
                    }

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            @Html.Action("Index", "Default")

            <!-- Main content -->
            <div class="content ">

                @*@RenderBody()*@
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>


    </div>
    <script type="text/javascript" src="~/AdminLTE-3.0.4/plugins/jquery/jquery.js"></script>
    <script type="text/javascript" src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>


    <script type="text/javascript" src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script type="text/javascript" src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script type="text/javascript" src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
    <script type="text/javascript" src="~/Scripts/toastr.js"></script>

    <script type="text/javascript">
        $(".toastrBtn1").click(function () {
            toastr.success("Başarıyla Güncellendi")
        }),
            $(".toastrBtn2").click(function () {
                toastr.error(+"Başarıyla Silindi")
            }),
            $(".toastrBtn3").click(function () {
                toastr.success("Kategori Eklendi")
            });</script>
    <script type="text/javascript">jQuery.noConflict();</script>
</body>
</html>
