@model EntityLayer.Dto.WriterLogInDto
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <title>| Yazar Giriş</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/AdminLTE-3.0.4/Login_v9/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/AdminLTE-3.0.4/Login_v9/css/main.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="container-login100" style="background-image: url('/AdminLTE-3.0.4/Login_v9/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
            <div class="mb-4 text-center"><a href="/Register/WriterRegister"><h4>Bir hesabınız yok mu?</h4></a></div>
            @using (Html.BeginForm("WriterLogIn", "LogIn", FormMethod.Post))
            {
                <span class="login100-form-title p-b-37">
                    Giriş Yap
                </span>

                <div class="wrap-input100 validate-input m-b-20" data-validate="Mail Adresi Giriniz">
                    <input class="input100" type="text" name="WriterMail" placeholder="E-Mail">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-25" data-validate="Parola Giriniz">
                    <input class="input100" type="password" name="WriterPassword" placeholder="Parola">
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Giriş Yap
                    </button>
                </div>

                <div class="text-center p-t-57 p-b-20">
                    <span class="txt1">
                        Veya Giriş Yap
                    </span>
                </div>

                <div class="flex-c p-b-112">
                    <a href="#" class="login100-social-item">
                        <i class="fa fa-facebook-f"></i>
                    </a>

                    <a href="#" class="login100-social-item">
                        <img src="~/AdminLTE-3.0.4/Login_v9/images/icons/icon-google.png" alt="GOOGLE">
                    </a>
                </div>

                <div class=" text-center">
                    <a href="/Home/HomePage" class="txt2 hov1" style="color: blueviolet">Ana sayfaya Dön</a>
                </div>
            }


        </div>

    </div>



    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/bootstrap/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/AdminLTE-3.0.4/Login_v9/js/main.js"></script>

</body>
</html>

