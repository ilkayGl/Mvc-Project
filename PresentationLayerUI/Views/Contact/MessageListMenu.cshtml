<div class="col-md-3">
    <a href="/Message/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Contact/Index" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> İletişim
                        <span class="badge bg-primary float-right">@ViewBag.contact</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Message/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.receiverMail</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/Message/SendBox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.sendMail</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/DraftMessages/" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-yellow float-right">@ViewBag.draftMail</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i> Spam
                        <span class="badge bg-warning float-right">@ViewBag.spamMail</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-cyan float-right">@ViewBag.trashMail</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler - 2</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul  class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-inbox" style="color: darkgoldenrod"> Okunmamış Mesajlar &nbsp<span class="badge bg-warning float-right">@ViewBag.unReadMail</span></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-inbox" style="color: gray"> Okunmuş Mesajlar &nbsp<span class="badge bg-gradient-gray float-right">@ViewBag.readMail</span></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-inbox" style="color: red"> Önemli Mesajlar &nbsp<span class="badge bg-danger float-right">@ViewBag.importantMail</span></i>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
