@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-left:5rem">
    <h2>Başlık Güncelleme Sayfası</h2>
</div>


@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group" style="margin-left:5rem;margin-top:5rem">
        @Html.Label("Başlık ID")
        @Html.TextBoxFor(x => x.HeadingID, new { @class = "form-control disabled", @style = "width:20rem", @readonly = true })
        <br />
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control", @style = "width:20rem" })
        <br />
        @Html.Label("Tarih ")
        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control", @style = "width:20rem", @readonly = true })
        <br />
        @Html.Label("Yazar ID")
        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control", @style = "width:20rem", @readonly = true })
        <br />
        @Html.Label("Kategori Adı")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control", @style = "width:20rem" })
        <br />
        <button class="btn btn-success toastrBtn3">Güncelle</button>
    </div>
}