@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategori İşlemleri</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori İşlemleri Veri Tablosu</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="" data-toggle="tooltip" title="">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kategory</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Başlıklar</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.CategoryID</th>
                            <td>@item.CategoryName</td>
                            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger toastrBtn2">Sil</a></td>
                            <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-success toastrBtn1">Güncelle</a></td>
                            <td><a href="#" class="btn btn-info">Başlıklar</a></td>

                        </tr>
                    }

                </table>
            </div>
        </div>
    </section>
</body>
<a href="/AdminCategory/AddCategory" class="btn btn-outline-info">Yeni Kategory Ekle</a>
