@using EntityLayer.Concrete
@model List<Message>

@{
    ViewBag.Title = "SendBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@*@{ string read = ""; }
    @{ string important = ""; }*@
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mesaj Sayfası</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Gönderilen Mesajlar</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            @Html.Action("MessageListMenu_Writer", "WriterPanelMessage") <!--contactControllerdaki messagelistmenu partialviewi-->
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Gönderilen Mesajlar</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mail Kutusundan Ara">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->


                    @Html.Action("PartialMessageList", "WriterPanelMessage")

                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover ">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @*read = (!item.IsRead) ? "warning" : "capitalize";
                                        important = (!item.IsImportant) ? "body" : "warning";
                                        <tr>
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" value="" id="check1">
                                                    <label for="check1"></label>
                                                </div>
                                            </td>
                                            <td>
                                                <a class="btn btn-default btn-sm" href="/Message/IsRead/@item.MessageID">
                                                    <i class="fas fa-mail-bulk text-@read"></i>
                                                </a>
                                            </td>
                                            <td class="mailbox-star">
                                                <a href="/Message/IsImportant/@item.MessageID">
                                                    <i class="fas fa-star text-@important"></i>
                                                </a>
                                            </td>*@


                                    <tr>
                                        <td>
                                            <div class="icheck-primary">
                                                <input type="checkbox" value="" id="check1">
                                                <label for="check1"></label>
                                            </div>
                                        </td>

                                        <td class="mailbox-star">
                                            <a href="/WriterPanelMessage/GetSendboxMessageDetails/@item.MessageID">
                                                <i class="fas fa-star text-warning"></i>
                                            </a>
                                        </td>
                                        <td class="mailbox-name">
                                            <a href="/WriterPanelMessage/GetSendBoxMessageDetails/@item.MessageID">@item.ReceiverMail</a>
                                        </td>
                                        <td class="mailbox-subject">
                                            <b>@item.Subject</b> - @item.MessageContent @*//.Substring(0, 30)*@
                                        </td>
                                        <td class="mailbox-attachment"></td>
                                        <td class="mailbox-date">@(((DateTime)item.MessageDate).ToString("dd-MMMMM-yyyy"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table -->
                    </div>

                    <!-- /.mail-box-messages -->
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->
                <!--footer-->
                @Html.Action("PartialMessageListFooter", "WriterPanelMessage")
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

</body>
</html>



