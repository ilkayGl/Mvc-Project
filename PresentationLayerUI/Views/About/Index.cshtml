@using EntityLayer.Concrete
@model List<About>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


@{ string status = "";}
@{ string buttonTyp = "";}

<br />
<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık </th>
        <th>Alt Başlık</th>
        <th>Fotoğraf 1</th>
        <th>Fotoğraf 2</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Status == true)
        {
            status = "Pasif Yap";
            buttonTyp = "btn btn-danger";
        }
        if (item.Status == false)
        {
            status = "Aktif Yap";
            buttonTyp = "btn btn-success";
        }
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>
            <td>@item.AboutDetails2</td>
            <td>@item.AboutImage1</td>
            <td>@item.AboutImage2</td>
            <td><a href="/About/IsActive/@item.AboutID" class="@buttonTyp">@status</a></td>
        </tr>
    }
</table>


@Html.Action("AboutPartial", "About")