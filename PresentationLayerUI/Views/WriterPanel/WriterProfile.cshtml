@model EntityLayer.Concrete.Writer

@{ ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml"; }

<div style="margin-left:3rem;margin-top:0rem">

    <img src="@Model.WriterImage" width="150" height="150" class="img-circle" alt="Profil Resmi" />

    @using (Html.BeginForm("WriterProfile", "WriterPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {
        <div class="form-group">
            @*@Html.Label("Yazarın ID")*@
            @Html.HiddenFor(x => x.WriterID, new { @class = "form-control disabled", @style = "width:20rem", @readonly = true })

            <br />
            @Html.Label("Yazarın Adı")
            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @style = "width:20rem" })
            @Html.ValidationMessageFor(x => x.WriterName, null, new { @class = "text-danger" })
            <br />
            @Html.Label("Yazarın Soyadı")
            @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control", @style = "width:20rem" })
            @Html.ValidationMessageFor(x => x.WriterSurname)
            <br />
            @Html.Label("Mail Adresi")
            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @style = "width:20rem", })
            @Html.ValidationMessageFor(x => x.WriterMail)
            <br />
            @Html.Label("Hakkında")
            @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control", @style = "width:20rem" })
            @Html.ValidationMessageFor(x => x.WriterAbout)
            <br />
            @Html.Label("Yazarın Ünvanı")
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @style = "width:20rem" })
            @Html.ValidationMessageFor(x => x.Title)
            <br />
            @Html.Label("Yazarın Şifresi")
            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control ", @style = "width:20rem" })
            @Html.ValidationMessageFor(x => x.WriterPassword)
            <br />
            <div class="custom-file" style="width:20rem">
                <input type="file" name="WriterImage" class="custom-file-input" id="customFile">
                <label class="custom-file-label " for="customFileLang">Resim Seçiniz</label>
            </div>
            <br />
        </div>
        <button class="btn btn-success toastrBtn3">Güncelle</button>
    }
</div>

